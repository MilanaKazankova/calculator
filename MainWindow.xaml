        <Button Content="7" HorizontalAlignment="Left" Margin="50,310,0,0" VerticalAlignment="Top" Height="70" Width="70" Background="#FFE0E3F0" FontSize="48" FontFamily="Bahnschrift SemiLight Condensed" FontWeight="Bold" Foreground="#FF233D8F" Click="Button_Click_6"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="145,310,0,0" VerticalAlignment="Top" Height="70" Width="70" Background="#FFE0E3F0" FontSize="48" FontFamily="Bahnschrift SemiLight Condensed" FontWeight="Bold" Foreground="#FF233D8F" Click="Button_Click_7"/>
